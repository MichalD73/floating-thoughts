{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "swift: build",
            "type": "shell",
            "command": "swift build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$swiftc"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "swift: test",
            "type": "shell",
            "command": "swift test",
            "group": "test",
            "problemMatcher": ["$swiftc"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "swift: run app",
            "type": "shell",
            "command": "swift run",
            "group": "none",
            "problemMatcher": ["$swiftc"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
